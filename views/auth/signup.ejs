    <main>
      <% if(isEdit) { %>
        <h1>Update the Profile</h1>
      <% } else { %>
        <h1>Sign Up Now!</h1>
      <% } %>
        <form class="login-form" action="/<% if(isEdit) { %>update<% } else { %>signup<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (isEdit) { %><%= user.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<% if (isEdit) { %><%= user.email %><% } %>">
            </div>
            <% if(isEdit) { %> <%
            } else { %>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password">
            </div>
            <% } %>
            <fieldset class="row mb-3" style="color: antiquewhite;">
    <legend class="col-form-label col-sm-2 pt-0">Role</legend>
    <div class="col-sm-10">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"  value="user" required <% if (isEdit && user.role === 'user') { %>checked<% } %> >
        <label class="form-check-label" for="gridRadios1">
          Customer
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"  value="service_provider" required <% if (isEdit && user.role === 'service_provider') { %>checked<% } %> >
        <label class="form-check-label" for="gridRadios2">
          Service Provider
        </label>
      </div>
     
    </div>
  </fieldset>
             <div class="card__actions">
            <% if(!isEdit) { %>
                <button class="btn" type="submit">Signup</button>
          </div>
          <div class="card__actions_small">
              <small>
                  <a href='/login'>Already have an account? Login here.</a><br />
                  <!-- <a href='/forgot_password'>Forgot your password? Click here to reset it.</a> -->
                </small>
          </div>
          <% } else { %>
            <div class="card__actions">
              <button class="btn" type="submit">Update</button>
            </div>
